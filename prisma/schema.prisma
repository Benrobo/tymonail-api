datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id           String      @id @unique
  email        String      @unique
  name         String
  hash         String
  refreshToken String?
  templates    Templates[]
  createdAt    DateTime    @default(now())

  @@map(name: "user")
}

model Templates {
  id        String   @id
  name      String
  userId    String
  users     User     @relation(fields: [userId], references: [id])
  form      Form  @relation(fields: [id], references: [templateId])  
  feedbacks Feedbacks[]
  createdAt DateTime @default(now())

  @@map(name: "templates")
}

model Form {
  id         String    @id
  templateId String    @unique
  userId     String    @unique
  heading    String?
  subHeading String?
  profileImg Boolean?  @default(dbgenerated("false"))
  username   Boolean?  @default(dbgenerated("false"))
  userCareer Boolean?  @default(dbgenerated("false"))
  ratings    Boolean?  @default(dbgenerated("true"))
  templates  Templates? 

  // @@id([id, collectionId])
  @@map(name: "form")
}

model Feedbacks {
  id         String    @id
  feedbackId String    @unique
  templateId String    @unique
  userId     String    @unique
  message    String
  name String
  ratings String
  profileImg Boolean?  @default(dbgenerated("false"))
  templates  Templates @relation(fields: [feedbackId], references: [id])  

  // @@id([id, collectionId])
  @@map(name: "feedback")
}
