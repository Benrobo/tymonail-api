datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id           String      @id @unique
  email        String      @unique
  name         String
  hash         String
  refreshToken String?
  templates    Templates[]
  createdAt    DateTime    @default(now())

  @@map(name: "user")
}

model Templates {
  id        String   @id
  name     String
  userId    String
  users    User     @relation(fields: [userId], references: [id])
  form      Form?
  createdAt DateTime @default(now())

  @@map(name: "templates")
}

model Form {
  id         String    @id
  templateId     String    @unique
  userId     String
  templates Templates @relation(fields: [templateId], references: [id])
  profileImg String?
  username   String
  userCareer String?
  completed  Boolean

  // @@id([id, collectionId])
  @@map(name: "form")
}
