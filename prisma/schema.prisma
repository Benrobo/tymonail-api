datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id           String      @id @unique
  email        String      @unique
  name         String
  hash         String
  refreshToken String?
  templates    Templates[]
  createdAt    DateTime    @default(now())

  @@map(name: "user")
}

model Templates {
  id        String   @id
  title     String
  tmp_id    String   @unique
  userId    User     @relation(fields: [id], references: [id])
  form      Form?
  createdAt DateTime @default(now())
}

model Form {
  id         String    @id
  formId     String    @unique
  userId     String
  templateId Templates @relation(fields: [id], references: [tmp_id])
  profileImg String?
  username   String
  userCareer String?
  completed  Boolean

  // @@id([id, collectionId])
  @@map(name: "form")
}
